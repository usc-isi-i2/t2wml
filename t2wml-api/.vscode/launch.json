    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File (Integrated Terminal)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${fileDirname}",
            "env": {"PYTHONPATH": "${workspaceRoot}"}
        }, 
        {
            "name": "Tests",
            "type": "python",
            "request": "launch",
            "module": "unittest",
            "args": [
               //"unit_tests.test_rdf_generation",
                "unit_tests.test_api_classes",
                "unit_tests.test_kgtk_results", 
                "unit_tests.test_json_results",
                "unit_tests.test_api_scripts"
                
            ],
            "cwd": "${workspaceFolder}",
        },
    ]
}